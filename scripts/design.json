{
  "theme": "light",
  "colors": {
    "primaryGradient": {
      "from": "#FF6A00",
      "to": "#FF0000"
    },
    "background": "#FFFFFF",
    "surface": "#F5F5F5",
    "textPrimary": "#111111",
    "textSecondary": "#555555",
    "border": "#E0E0E0"
  },
  "typography": {
    "fontFamily": "Inter, sans-serif",
    "headings": {
      "h1": {
        "fontSize": "2.25rem",
        "fontWeight": "700"
      },
      "h2": {
        "fontSize": "1.5rem",
        "fontWeight": "600"
      },
      "h3": {
        "fontSize": "1.25rem",
        "fontWeight": "500"
      }
    },
    "body": {
      "fontSize": "1rem",
      "lineHeight": "1.6"
    }
  },
  "buttons": {
    "default": {
      "padding": "12px 24px",
      "borderRadius": "8px",
      "fontWeight": "600",
      "background": "linear-gradient(90deg, #FF6A00 0%, #FF0000 100%)",
      "color": "#FFFFFF",
      "hover": {
        "opacity": "0.85"
      }
    }
  },
  "card": {
    "background": "#FFFFFF",
    "borderRadius": "16px",
    "boxShadow": "0 4px 12px rgba(0,0,0,0.06)",
    "padding": "20px"
  },
  "icons": {
    "style": "minimal",
    "color": "#FF6A00",
    "size": "20px"
  },
  "layout": {
    "grid": {
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 3
      },
      "gap": "24px"
    },
    "breakpoints": {
      "mobile": "0px",
      "tablet": "768px",
      "desktop": "1024px"
    }
  },
  "animations": {
    "transition": "all 0.3s ease-in-out",
    "hoverScale": "scale(1.03)"
  }
}